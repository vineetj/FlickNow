<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ImageSearchModule.Activity.FlickImageListActivity">
    <data>

        <variable
            name="viewModel"
            type="com.vineetjain.flicknow.ImageSearchModule.ViewModel.PhotoListVM" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_15">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_src_text"
    android:hint="Search pics"
    android:maxLength="20"
    android:text=""
    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"

    android:drawableRight="@drawable/search_icon"
    />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_src_text" />

    <TextView
        android:id="@+id/no_operators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_images"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/dp_20"
        android:visibility="gone" />


</RelativeLayout>
</layout>